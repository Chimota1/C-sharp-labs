<Window x:Class="lab8_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вікторина: Види доби" Height="350" Width="450"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- інструкція -->
            <RowDefinition Height="Auto"/>  <!-- введення -->
            <RowDefinition Height="Auto"/>  <!-- кнопки -->
            <RowDefinition Height="*"/>     <!-- результат -->
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Введіть вид доби (ранок, ланч, день, полудень, вечір, ніч). Введіть 0 для виходу."
                   FontSize="14" TextWrapping="Wrap"/>

        <TextBox Grid.Row="1"
                 x:Name="inputBox"
                 Margin="0,8,0,8"
                 Height="30"
                 FontSize="14"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,8">
            <Button Content="Перевірити" Width="120" Height="32" Margin="8,0" Click="CheckTime_Click"/>
            <Button Content="Вийти" Width="100" Height="32" Margin="8,0" Click="Exit_Click"/>
        </StackPanel>

        <TextBlock Grid.Row="3"
                   x:Name="resultText"
                   Margin="0,8,0,0"
                   FontSize="16"
                   TextWrapping="Wrap"
                   Foreground="DarkBlue"/>
    </Grid>
</Window>