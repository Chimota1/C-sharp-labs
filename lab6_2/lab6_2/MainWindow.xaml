<Window x:Class="lab6_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Program Manager" Height="700" Width="1200">
    <Grid>
        <Button Name="StartButton" Width="400" Height="60" Content="Init Classes" FontSize="24" 
                VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0"
                Click="InitClick"/>
        
        <TextBox Name="OsType" Width="200" Height="40" Margin="50,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" BorderBrush="DarkGreen" BorderThickness="2" Visibility="Hidden"/>
        <TextBox Name="OsVersion" Width="200" Height="40" Margin="300,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" BorderBrush="DarkGreen" BorderThickness="2" Visibility="Hidden"/>
        <CheckBox Name="OsLicensed" Content="Licensed" Margin="550,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Hidden"/>
        <Button Name="SetOsButton" Width="150" Height="40" Content="Set OS Info" FontSize="14" Margin="50,150,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Hidden" Click="SetOSBtn"/>
        <TextBox Name="AppName" Width="200" Height="40" Margin="50,220,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" BorderBrush="DarkBlue" BorderThickness="2" Visibility="Hidden"/>
        <TextBox Name="AppPlatform" Width="200" Height="40" Margin="300,220,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" BorderBrush="DarkBlue" BorderThickness="2" Visibility="Hidden"/>
        <TextBox Name="AppCurrentVersion" Width="200" Height="40" Margin="550,220,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" BorderBrush="DarkBlue" BorderThickness="2" Visibility="Hidden"/>
        <CheckBox Name="AppPremium" Content="Premium" Margin="800,220,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Hidden"/>
        <Button Name="SetAppButton" Width="150" Height="40" Content="Set App Info" FontSize="14" Margin="50,270,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Hidden" Click="SetAppBtn"/>
        <TextBox Name="Output" Width="900" Height="150" Margin="50,350,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" TextWrapping="Wrap" AcceptsReturn="True" Visibility="Hidden"/>
        <Button Name="OptimizationButton" Width="200" Height="40" Content="Optimization" FontSize="14" Margin="50,520,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Hidden" Click="OptimizationBtn"/>
        <Button Name="ReleaseButton" Width="200" Height="40" Content="Release Version" FontSize="14" Margin="300,520,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Hidden" Click="ReleaseBtn"/>
        <Button Name="SupportButton" Width="200" Height="40" Content="Technical Support" FontSize="14" Margin="550,520,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Hidden" Click="SupportBtn"/>
        <Button Name="TypeButton" Width="200" Height="40" Content="Type Info" FontSize="14" Margin="800,520,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Hidden" Click="TypeBtn"/>

    </Grid>
</Window>