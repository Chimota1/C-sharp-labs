<Window x:Class="lab8_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Team Info" Height="700" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Ввід даних -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <StackPanel Margin="10">
                <TextBlock Text="Назва команди:"/>
                <TextBox x:Name="TeamNameBox" Width="120"/>
            </StackPanel>

            <StackPanel Margin="10">
                <TextBlock Text="Кількість очок:"/>
                <TextBox x:Name="PointsBox" Width="80"/>
            </StackPanel>

            <StackPanel Margin="10">
                <TextBlock Text="Місце:"/>
                <TextBox x:Name="PlaceBox" Width="80"/>
            </StackPanel>

            <StackPanel Margin="10">
                <TextBlock Text="Травмовані гравці:"/>
                <TextBox x:Name="InjuredBox" Width="80"/>
            </StackPanel>
            <Button x:Name="AddTeamButton" Content="Додати" Width="65" Margin="10" Click="AddTeam"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button x:Name="OutputAll" Content="Команди які проходять" Width="200" Height="30" FontSize="14" Margin="10" Click="WhoGoToChamp"/>
            <Button x:Name="Output" Content="Всі команди" Width="200" Height="30" FontSize="14" Margin="10" Click="ShowTeams"/>
        </StackPanel>
        
        <TextBlock x:Name="Result" Grid.Row="2" 
                   Margin="20" 
                   TextWrapping="Wrap" 
                   FontSize="14" 
                   VerticalAlignment="Top"
                   Height="400"/>
    </Grid>
</Window>