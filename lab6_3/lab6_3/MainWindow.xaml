<Window x:Class="lab6_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab6_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="Setters" Width="500" Height="100" VerticalAlignment="Top" Visibility="Visible" Margin="10"></TextBox>
        <Button Name="Btn1" Width="200" Height="50" Background="DarkBlue" Foreground="White" FontSize="20" Content="Set Cost" Visibility="Visible" Click="SetCostBtn"></Button>
        <Button Name="Btn2" Width="200" Height="50" Background="DarkBlue" Foreground="White" FontSize="20" Content="Set Power" Visibility="Hidden" Click="BtnPowerBtn"></Button>
        <TextBlock Width="400" Height="225" VerticalAlignment="Top" Margin="10" Visibility="Hidden"></TextBlock>
        <TextBox Name="OutputText" Width="400" Height="225" Visibility="Hidden" VerticalAlignment="Top" Margin="10"></TextBox>
        <Button Name="Btn3" Width="200" Height="50" Background="DarkBlue" Foreground="White" FontSize="20" Content="Output" Visibility="Hidden" Click="OutputBtn" ></Button>
        <Button Name="Btn4" Width="200" Height="50" Background="DarkBlue" Foreground="White" FontSize="20" Content="Sort By Cost" VerticalAlignment="Bottom" Margin="50" HorizontalAlignment="Left" Visibility="Hidden" Click="SortByCostBtn"></Button>
        <Button Name="Btn5" Width="200" Height="50" Background="DarkBlue" Foreground="White" FontSize="20" Content="Sort By Power" VerticalAlignment="Bottom" Margin="50" HorizontalAlignment="Right" Visibility="Hidden" Click="SortByPowerBtn"></Button>
    </Grid>
</Window>
