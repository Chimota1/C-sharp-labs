<Window x:Class="lab4._3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4._3"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Button Name="Start" Width="300" Height="50" Content="START" FontSize="30"  FontStyle="Italic" FontWeight="Black" VerticalAlignment="Center" HorizontalAlignment="Center" Click="StartButton" ></Button>
        <TextBlock Visibility="Hidden" Name="Result">Result: </TextBlock>
        <TextBlock Name="ResultNumber" Width="50" Height="30" VerticalAlignment="Top" Margin="0 0 650 0"></TextBlock>
        <StackPanel Visibility="Hidden" Name="Panel" Margin="0 20 0 0">
            <RadioButton  Name="PlusButton">+</RadioButton>
            <RadioButton Name="MinusButton">-</RadioButton>
            <RadioButton Name="MultiplyButton">*</RadioButton>
            <RadioButton Name="DivideButton">/</RadioButton>
            <RadioButton Name="ElevationButton">^</RadioButton>
        </StackPanel>
        <Grid Name="ButtonBlock" Margin="200" Visibility="Hidden">
            <Button Name="Import" Height="40" Width="100" HorizontalAlignment="Left" Content="Import" Click="ImportClick"></Button>
            <Button Name="CalculateButton" Height="40" Width="100" HorizontalAlignment="Center" Content="Calculate" Click="CalculateClick"></Button>
            <Button Height="40" Width="100" HorizontalAlignment="Right" Content="Export" Click="ExportClick"></Button>
        </Grid>
    </Grid>
</Window>
